<idea-plugin url="https://github.com/qbixus/google-java-format/tree/master/qbixus_idea_plugin"
  require-restart="true">
  <id>qbixus-java-format</id>
  <name>qbixus-java-format</name>
  <vendor url="https://github.com/qbixus/google-java-format">
    Qbixus
  </vendor>

  <depends>com.intellij.modules.java</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.platform</depends>

  <description><![CDATA[
    Formats source code using the google-java-format tool.<p>

    This plugin requires additional IDE configuration. For more information,
    <a href="https://github.com/qbixus/google-java-format/blob/master/README.md#intellij-jre-config">read
    the documentation.</a>
  ]]></description>
  <change-notes><![CDATA[
    <dl>
      <dt>1.23.0.0</dt>
      <dd>TBD</dd>
    </dl>
  ]]></change-notes>

  <extensions defaultExtensionNs="com.intellij">
    <formattingService
      implementation="com.github.qbixus.googlejavaformat.intellij.GoogleJavaFormatFormattingService"/>
    <postStartupActivity implementation="com.github.qbixus.googlejavaformat.intellij.InitialConfigurationStartupActivity"/>
    <projectConfigurable
      instance="com.github.qbixus.googlejavaformat.intellij.GoogleJavaFormatConfigurable"
      id="qbixus-java-format.settings"
      displayName="qbixus-java-format Settings"/>
    <projectService
      serviceImplementation="com.github.qbixus.googlejavaformat.intellij.QbixusJavaFormatSettings"/>
    <projectService serviceImplementation="com.github.qbixus.googlejavaformat.intellij.JreConfigurationChecker"/>
    <notificationGroup displayType="STICKY_BALLOON" id="Enable qbixus-java-format"
      isLogByDefault="false"/>
    <notificationGroup displayType="STICKY_BALLOON" id="Configure JRE for qbixus-java-format"
      isLogByDefault="true"/>
    <notificationGroup displayType="BALLOON" id="qbixus-java-format parsing error"
      isLogByDefault="false"/>
  </extensions>
</idea-plugin>
